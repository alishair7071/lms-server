{
  "compilerOptions": {
    "target": "ES2020",                        
    "module": "CommonJS",                      
    "moduleResolution": "node",                
    "esModuleInterop": true,                   
    "strict": true,                            
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./build",
    "types": ["node"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "build"]
}
